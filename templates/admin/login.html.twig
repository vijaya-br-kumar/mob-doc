{% extends 'admin/base.html.twig' %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/login.css') }}">
{% endblock %}

{% block wholeBody %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="offset-md-4">
                    <div class="col-md-6 login-form">
                        <p class="login-header">MobiDoc | Admin | Login</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="offset-md-4 login-form">
                    <div class="col-md-6">
                        <form action="{{ admin_path('login.php') }}" class="needs-validation pt-5" novalidate method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" id="email" required name="email">
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">This field is required!</div>
                            </div>
                            <div class="form-group">
                                <label for="pwd">Password:</label>
                                <input type="password" class="form-control" id="pwd" required name="password">
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">This field is required!</div>
                            </div>
                            <button type="submit" class="btn btn-primary col-md-12">Submit</button>
                        </form>
                        {% if loginError is defined and loginError %}
                            <p>Invalid Credentials!</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'admin/components/form-validation.html.twig' %}
{% endblock %}