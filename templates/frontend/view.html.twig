{% extends 'frontend/base.html.twig' %}

{% block body %}
    <div class="row list-header">
        <div class="col-lg-12 pt-4">
            <p class="body-page-title">
                {% if result.status %}
                    {{ result.data.name }}
                {% else %}
                    {{ "" }}
                {% endif %}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <hr>
        </div>
    </div>

    {% include 'frontend/components/alert-error-message.html.twig' %}

    {% if result.status %}
        <div class="row">
            <div class="col-lg-3 p-3">
                <div class="card">
                    <img src="{{ asset(result.data.imagePath) }}" class="card-img-top display-image" alt="...">
                    <div class="card-body p-2">
                        <h5 class="card-title">{{ result.data.name }}</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 p-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Description</h5>
                        <p class="card-text">{{ result.data.description }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 p-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Prescription</h5>
                        <p class="card-text">{{ result.data.prescription }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}